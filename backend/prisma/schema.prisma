datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator db {
  provider = "go run github.com/steebchen/prisma-client-go"
}

model User {
  userId    String @id
  firstName String
  lastName  String

  texts Text[]
}

model Text {
  textId       String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [userId])
  textTitle    String
  textContent  String
  lastEditedOn DateTime @default(now())
}
